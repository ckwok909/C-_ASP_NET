@model List<Movie_Rental.Models.Movie>
@{
    ViewData["Title"] = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<p>
    @Html.ActionLink("New Movie", "MovieForm", new Movie {Id = 0}, new { @class = "btn btn-secondary" })
</p>
@if (Model.Count == 0)
{
    <p>No one has rented thos movie before.</p>
}
else
{
    <table class="table table-hover">
        <tr class="table-dark">
            <th scope="row"><h3>Movie</h3></th>
            <th scope="row"><h3>Genre</h3></th>
        </tr>   
        @foreach (var movie in Model)
        {
            <tr class="table-active">
                <td>@Html.ActionLink(@movie.Name, "MovieForm", new{ movie.Id })</td>
                <td>@movie.Genre.GenreType</td>
            </tr>
        }

    </table>

}

